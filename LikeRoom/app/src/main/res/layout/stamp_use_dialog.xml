<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:background="@drawable/stamp_store_title_background"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingTop="10dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_height="300dp"
        android:layout_marginBottom="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentTop="true"
            android:layout_height="35dp">

            <Button
                android:id="@+id/button_back"
                android:background="@mipmap/icon_back"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_height="35dp"
                android:layout_width="40dp" />

            <TextView
                android:text="스탬프 사용"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:layout_centerInParent="true"
                android:textColor="@color/clrTextColorDeepDark"
                android:textSize="23dp"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="85dp"
            android:background="@drawable/stamp_use_blank_backgroud"
            android:layout_centerInParent="false"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:layout_height="100dp"
                    android:paddingTop="3dp"
                    android:layout_marginTop="10dp">

                    <ImageView
                        app:srcCompat="@android:drawable/sym_def_app_icon"
                        android:id="@+id/imageView3"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_width="75dp"
                        android:layout_height="75dp" />

                    <TextView
                        android:text="스탬프 이름"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView9"
                        android:layout_centerInParent="false"
                        android:layout_centerVertical="false"
                        android:layout_centerHorizontal="false"
                        android:textColor="@color/clrTextColorDeepDark"
                        android:textSize="23dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="90dp" />

                    <TextView
                        android:text="사용기한(시작)~\n사용기한(마감)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView8"
                        android:layout_centerVertical="false"
                        android:layout_centerHorizontal="false"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/clrTextColorMediumDark"
                        android:textSize="18dp"
                        android:layout_marginLeft="90dp" />

                    <Switch
                        android:text="Switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/switch1"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true" />

                </RelativeLayout>

                <TextView
                    android:text="직원에게 보여주세요"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    android:textSize="21dp"
                    android:textColor="@color/clrTextColorDeepDark"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="5dp" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="80dp">

            <TextView
                android:text="사용한 이후에는 취소가 불가합니다"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:textSize="18dp"
                android:textColor="@color/Gray"
                android:textStyle="normal|bold"
                android:layout_centerVertical="false"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp" />

            <Button
                android:text="사용"
                android:id="@+id/button_use"
                android:layout_centerInParent="false"
                android:layout_centerVertical="false"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:background="@color/test02"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:textSize="18dp"
                android:textStyle="normal|bold" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>