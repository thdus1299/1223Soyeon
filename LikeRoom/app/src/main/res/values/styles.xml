<resources>

    <!-- Base application theme. -->
    <style name="LikeRoomTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LikeRoomTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LikeRoomTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="LikeRoomTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LikeRoomTheme.EmptyBackgroundButton" parent="@android:style/Widget.Button">
        <item name="android:text"></item>
        <item name="android:background">@color/Transparency</item>
    </style>

    <style name="LikeRoomTheme.EditText" parent="@android:style/Widget.EditText">
        <item name="android:ems">256</item>
        <item name="android:padding">0dp</item>
    </style>
</resources>
