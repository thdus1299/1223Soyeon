<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--둥근페이지를 만들기 위해서 레이아웃에서 rounded_corner을 가져다 쓴다.-->
    <item
        android:gravity="left|top"
        android:drawable="@mipmap/rounded_corner">
    </item>
    <item
        android:gravity="right|top">
        <rotate
            android:pivotX="50%" android:pivotY="50%"
            android:fromDegrees="90" android:toDegrees="0">
            <bitmap android:src="@mipmap/rounded_corner" />
        </rotate>
    </item>
    <item
        android:gravity="right|bottom">
        <rotate
            android:pivotX="50%" android:pivotY="50%"
            android:fromDegrees="180" android:toDegrees="90">
            <bitmap android:src="@mipmap/rounded_corner" />
        </rotate>
    </item>
    <item
        android:gravity="left|bottom">
        <rotate
            android:pivotX="50%" android:pivotY="50%"
            android:fromDegrees="270" android:toDegrees="180">
            <bitmap android:src="@mipmap/rounded_corner" />
        </rotate>
    </item>
</layer-list>